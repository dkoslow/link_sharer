{
  "name": "LinkSharer",
  "version": "1.0",
  "manifest_version": 2,
  "description": "Extension for easily sharing links with other chrome users",
  "browser_action": {
    "default_title": "Bookmark This Page",
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["eventPage.js"],
    "persistent": false
  },
  "permissions": [
    "tabs",
    "http://*/*",
    "https://*/*"
  ]
}